{
    "name": "configs-homelab",
    "build": {
        "dockerfile": "Dockerfile"
    },

    "customizations": {
        "vscode": {
            "settings": {},
            "extensions": [
                "streetsidesoftware.code-spell-checker",
                "asciidoctor.asciidoctor-vscode",
                "ms-azuretools.vscode-docker",
                "aaron-bond.better-comments",
                "timonwong.shellcheck",
                "jebbs.plantuml",
                "github.vscode-github-actions",
                "redhat.vscode-yaml",
                "GitHub.copilot",
                "golang.go",
                "alexkrechik.cucumberautocomplete"
            ]
        }
    },

    "features": {
        "ghcr.io/devcontainers/features/docker-in-docker:2.12.0": {}
    },

    "postCreateCommand": "${containerWorkspaceFolder}/.devcontainer/post-create.sh",
    "postStartCommand": "${containerWorkspaceFolder}/.devcontainer/post-start.sh",

    "forwardPorts": [2990, 3080],
    "portsAttributes": {
        "2990": {
            "label": "2990 Portainer"
        }
    }
}
