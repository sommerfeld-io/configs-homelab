{
	"branches": ["main"],
	"plugins": [
		"@semantic-release/commit-analyzer",
		[
            "@semantic-release/release-notes-generator",
            {
                "template": ".github/workflows/assets/release-template.hbs",
            }
        ],
		[
			"@semantic-release/npm",
			{
				"npmPublish": false
			}
		],
		[
			"@semantic-release/exec",
			{
				"prepareCmd": ".github/workflows/assets/release.sh ${nextRelease.version}"
			}
		],
		[
			"@semantic-release/git",
			{
				"assets": [
					"package.json",
					"package-lock.json",
				],
				"message": "refactor(release): bump version to ${nextRelease.version} [Actions Bot]\n\n${nextRelease.notes}"
			}
		],
		"@semantic-release/github"
	]
}
