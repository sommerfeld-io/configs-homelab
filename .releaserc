{
	"branches": ["main"],
	"plugins": [
		"@semantic-release/commit-analyzer",
		[
            "@semantic-release/release-notes-generator",
            {
                "preset": "conventionalcommits",
                "writerOpts": {
                    "mainTemplate": "Tagged on {{date}}\n\nCompare {{previousTag}}...{{currentTag}}\n\n{{> header}}{{> commits}}{{> footer}}",
                    "commitTemplate": "* {{commit.message}} ([{{commit.short}}]({{commit.href}}))"
                }
            }
        ],
		[
			"@semantic-release/npm",
			{
				"npmPublish": false
			}
		],
		[
			"@semantic-release/exec",
			{
				"prepareCmd": "./.release.sh ${nextRelease.version}"
			}
		],
		[
			"@semantic-release/git",
			{
				"assets": [
					"package.json",
					"package-lock.json",
				],
				"message": "refactor(release): bump version to ${nextRelease.version} [Actions Bot]\n\n${nextRelease.notes}"
			}
		],
		"@semantic-release/github"
	]
}
